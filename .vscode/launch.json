{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Launch BackendApplication",
      "request": "launch",
      "mainClass": "com.ffenf.app.BackendApplication",
      "projectName": "backend",
      "args": "--spring-boot.run.profiles=dev",
      "env": {
        "DB_URL": "jdbc:postgresql://localhost:5432/student_platform",
        "DB_USERNAME": "student_user",
        "DB_PASSWORD": "student_pass",
        "OPENAI_API_KEY": "your-openai-api-key-here",
        "JPA_SHOW_SQL": "true"
      },
      "vmArgs": "-Xmx1024m -Xms512m"
    }
  ]
}
